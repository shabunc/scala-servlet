<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 3.2//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite3.2.dtd">

<urlrewrite>

    <rule>
        <from>^/groovy/rewrite$</from>
        <run class="org.shabunc.servlets.GroovyServlet" method="ping" />
        <to>null</to>
    </rule>

    <rule>
        <from>^/java/rewrite$</from>
        <run class="org.shabunc.servlets.JavaServlet" method="ping" />
        <to>null</to>
    </rule>

    <rule>
        <from>^/scala/rewrite$</from>
        <run class="org.shabunc.servlets.ScalaServlet" method="ping" />
        <to>null</to>
    </rule>

</urlrewrite>

